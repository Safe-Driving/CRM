<script type="text/javascript">
  jQuery(document).ready(function() {

	var date = new Date();
		var d = date.getDate();
		var m = date.getMonth();
		var y = date.getFullYear();

      $('#calendar').fullCalendar({
			editable: true,
			events:  [
                <% @formations.each do |formation| %>

                {
                    title: '<%= formation.category %>',
                    start:  new Date(y, m, d, 10, 30),
					allDay: false

                },
                <% end %>
            ]
		});



  });
</script>

<div id='calendar'></div>